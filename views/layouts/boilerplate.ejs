    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,300;0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700&family=Plus+Jakarta+Sans:ital,wght@0,200..800;1,200..800&display=swap" rel="stylesheet">
</head>
<body>
    <%- include('../includes/navbar.ejs') %>
    
    <div class="container-fluid">

        <%- body %>
        <div class="chat-div" >
            hi there!
            <input type="text" style=" position: absolute; bottom: 1rem; margin: 1rem 0 0.2rem 0; width: 10rem;" >
        </div>
        <button  class="chat-btn" id="chat-btn" >
            <i class="fa-regular fa-comment"></i>
        </button>
    </div>


    <!-- footer -->
    <%- include('../includes/footer.ejs') %>

    <script  >
        let chatBtn = document.getElementById('chat-btn');
        let chat = document.querySelector('.chat-div');
        let isOpen = false;

        chatBtn.addEventListener('click', ()=>{
            if(isOpen){
                isOpen = false;
                chat.style.display = 'none';
                console.log('closed');
            } else {
                isOpen = true;
                chat.style.display = 'block';
                console.log('opened');
            }
        })
    </script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    
</body>
</html>